{
  "name": "mern-kit",
  "version": "1.0.0",
  "description": "A MERN stack starter kit",
  "private": true,
  "engines": {
    "node": "^9.4.0"
  },
  "watch": {
    "test": {
      "patterns": [
        "src/**",
        "server/**"
      ],
      "extensions": "js,jsx",
      "quiet": true,
      "delay": 2500
    }
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-react": "react-scripts start",
    "start-js": "npm-run-all -p watch-css start-react",
    "start": "node server/server.js",
    "test": "jest --env=jsdom --colors",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "deploy": "npm run build; cf push",
    "dev": "cross-env NODE_ENV=development nf --procfile Procfile-dev --port 3000 start",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js --ext .jsx --color .",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "prebuild": "npm run test",
    "watch": "npm-watch"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "body-parser": "^1.17.1",
    "bulma": "^0.4.1",
    "cfenv": "^1.0.4",
    "compression": "^1.7.1",
    "express": "^4.15.3",
    "i18next": "^10.3.0",
    "i18next-browser-languagedetector": "^2.1.0",
    "i18next-xhr-backend": "^1.5.1",
    "log4js": "^1.1.1",
    "mongoose": "^4.9.8",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.3.6",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.1.1",
    "babel-jest": "^22.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.16.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^7.6.1",
    "foreman": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.2.2",
    "nodemon": "^1.12.1",
    "npm-watch": "^0.3.0",
    "react-scripts": "^1.1.1",
    "sinon": "^4.2.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "<rootDir>/src/tests/config/setupTests.js",
      "<rootDir>/server/tests/config/setupTests.js"
    ]
  },
  "proxy": "http://localhost:3000"
}
